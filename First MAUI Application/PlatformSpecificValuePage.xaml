<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="First_MAUI_Application.PlatformSpecificValuePage"
             Title="PlatformSpecificValuePage">
    <VerticalStackLayout x:Name="VstackLayout" Padding="{OnPlatform iOS='12, 10, 50, 45', Default='30'}"
                         Margin="{OnPlatform iOS='10,30,10,30', Default='30'}">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>