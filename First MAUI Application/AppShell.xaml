<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="First_MAUI_Application.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:First_MAUI_Application"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <Tab Title="Home" Icon="home.svg">
            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"/>
        </Tab>
        <Tab Icon="dotnet_bot.svg" Title="New Page">
            <ShellContent
            Title="NewPage"
            ContentTemplate="{DataTemplate local:NewPage}"
            Route="NewPage"/>
        </Tab>

        <Tab>
            <ShellContent
            Title="Test"
            ContentTemplate="{DataTemplate local:TestPage}"
            Route="TestPage"/>
        </Tab>
        <Tab>
            <ShellContent
            Title="Platform"
            ContentTemplate="{DataTemplate local:PlatformSpecificValuePage}"
            Route="PlatformSpecificValuePage"/>
        </Tab>

    </TabBar>

   


   



    






</Shell>
